// serie.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;
void main()
{
	int n;
	do{
		cout<<"ingrese un numero:  ";
		cin>>n;
	}while(n<0);
	if (n%2==0)
		cout<<"el numero es par";
	else
		cout<<"el numero es impar";
	getch();
}

